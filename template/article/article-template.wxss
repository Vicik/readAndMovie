.article{
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  background-color: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.article-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 0 20rpx 20rpx;
}
.article-header .article-avatar{
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.article-title{
  padding: 0 0 20rpx 20rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}
.article-img{
  width: 100%;
  height: 460rpx;
}
.article-content{
  padding: 40rpx 20rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.article-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
}
.article-like-img{
  margin-right: 20rpx;
  width: 32rpx;
  height: 32rpx;
}
.article-like-count{
  margin-right: 32rpx;
  font-size: 32rpx;
}