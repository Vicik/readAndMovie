/* pages/user/user.wxss */
@import '/template/analyse/analyse-template.wxss';
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
}
.login-out{
  flex: 0 0 30%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background-color: lightgreen;
}
.login-out .login{
  width: 300rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
}
.user{
  text-align: center;
}
.out{
  padding: 5rpx 20rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  color: #fff;
  font-size: 20rpx;
  border: 1px solid #fff;
}
.user-info{
  margin: auto 0;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-name{
  color: #fff;
}
.detail{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  letter-spacing: 4rpx;
}
.detail-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.title{
  font-size: 40rpx;
  font-weight: 400;
  color: #000;
}
.check{
  margin-left: 5rpx;
}
