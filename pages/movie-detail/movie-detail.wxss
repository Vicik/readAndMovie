/* pages/movie-detail/movie-detail.wxss */
@import '/template/star/star-template.wxss';
.container{
  display: flex;
  flex-direction: column;
}
.img-container{
  overflow: hidden;
}
.head-img{
  width:100%;
  height: 320rpx;
  filter: blur(20px);
}
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position:absolute;
  top:0;
  left:0;
  display:flex;
  flex-direction: column;
}
.main-title{
  font-size: 19px;
  color:#fff;
  font-weight:bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}
.sub-title{
  margin-left: 40rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color:#fff;
}
.like{
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  margin-left: 40rpx;
}
.highlight-font{
  color: #f21146;
  font-size:22rpx;
  margin-right: 10rpx;
}
.plain-font{
  margin-right: 30rpx;
  color: #666;
  font-size:22rpx;
}
.movie-img{
  height:238rpx;
  width: 175rpx;
  position: absolute;
  top:160rpx;
  right: 30rpx;
}
.summary{
  padding: 40rpx;
  font-size: 30rpx;
  color: #777777;
}
.original-title{
  color: #1f3463;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.flex-row{
  display:flex;
  margin-bottom: 10rpx;
}
.mark{
  margin-right: 30rpx;
  white-space:nowrap;
  color: #999999;
}
.hr{
  height:1px;
  width: 100%;
  background-color: #d9d9d9;
}
.synopsis{
  padding: 50rpx 40rpx;
  display:flex;
  flex-direction: column;
  font-size: 30rpx;
}
.synopsis-font{
  color:#999;
}
.summary-content{
  margin-top: 20rpx;
  line-height:40rpx;
  letter-spacing: 1px;
}
.cast{
  padding: 40rpx;
  display:flex;
  flex-direction: column;
  font-size: 30rpx;
}
.cast-font{
  margin-bottom: 40rpx;
  color: #999;
}
.cast-container{
  display:inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  width: 170rpx;
  text-align:center;
  /* white-space: normal; */
}
.cast-imgs{
  width: 100%;
  white-space: nowrap;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
}
.cast-name{
  margin: 10rpx auto 0;
}